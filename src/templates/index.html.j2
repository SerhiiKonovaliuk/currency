<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="static/style.css">
    </head>
    <body class = "backcolor">
        <header class="head">
		
		<img class="logo" src="static/convert1.png" alt=""> 
		<h1 class="logotext">Курс Валют</h1>

        <table>
            <tbody>
                <tr>
                    <th bgcolor="#448AFF" colspan="2">Курс Валют </th>
                </tr>
                {% for currency, amount in currencies.items() %}
                <tr>
                    <th bgcolor="#BDBDBD">{{ currency }}</th>
                    <th bgcolor="#BDBDBD">{{ amount }}</th>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <form method="post">
            {{ form.csrf_token }}
            {{ form.amount.label }}  {{ form.amount }}
            {{ form.fromCurrency.label }}  {{ form.fromCurrency }}
            {{ form.toCurrency.label }}  {{ form.toCurrency }}
        </form>
    </body>
</html>
